<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LinearActivity" android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="1"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="2"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button2" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="3"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button3" android:layout_weight="1"
                    android:textSize="40sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="4"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button6" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="5"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button5" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="6"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button4" android:layout_weight="1"
                    android:textSize="40sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="7"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button9" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="8"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button8" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="9"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button7" android:layout_weight="1"
                    android:textSize="40sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="*"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button12" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="0"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button11" android:layout_weight="1"
                    android:textSize="40sp"/>
            <Button
                    android:text="#"
                    android:layout_width="80dp"
                    android:layout_height="70dp" android:id="@+id/button10" android:layout_weight="1"
                    android:textSize="40sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp">
            <Button
                    android:text="Discar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button15" android:layout_weight="1"
                    android:textSize="24sp"/>
            <Button
                    android:text="ENCERRAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button13" android:layout_weight="1"
                    android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="50sp"
            android:layout_marginBottom="8dp"/>
</LinearLayout>